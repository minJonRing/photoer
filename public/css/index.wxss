/* 毛玻璃 */

.glass::after {
    position: absolute;
    content: "";
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: fixed;
    filter: blur(20rpx);
    margin: -40rpx;
    z-index: -1;
}


